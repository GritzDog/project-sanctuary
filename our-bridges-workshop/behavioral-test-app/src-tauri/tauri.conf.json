{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AI Behavioral Test Dashboard",
  "identifier": "com.bridges-workshop.behavioral-test",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "AI Behavioral Differentiation Test",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Bridges Workshop",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "AI behavioral differentiation testing dashboard",
    "longDescription": "A desktop application for running and monitoring AI behavioral differentiation experiments with real-time visualization and statistical analysis."
  },
  "plugins": {}
}